<% provide(:title, @user.name)%>
<div class ="row">
  <aside class ="span4">
    <section>
      <%= render 'shared/user_info' %>
    </section>
    <section>
      <%=  render 'shared/stats' %>
    </section>
    <section>
      <%= render 'shared/micropost_form' if current_user?(@user) %>
    </section>
    </aside>
   <div class= "span8">
     <%= render 'users/follow_form' %>
     <% if @feed_items.any? %>
     <h3>Total Feeds (<%= @feed_items.count %>)</h3>
     <ol class ="microposts">
       <%= render @feed_items %>
     </ol>
     <%= will_paginate @feed_items %>
     <% end %>
   </div>
</div>

